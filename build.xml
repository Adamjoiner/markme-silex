<?xml version="1.0"?>
<project  default="test" name="commit to github">
    <tstamp>
        <format property="TODAY_FR" pattern="d-MMMM-yyyy" locale="fr,FR"/>
    </tstamp>
    <target name="test">
       <exec executable="cmd">
            <arg line="/C phpunit"/>
       </exec>
   </target>
   <target name="commit" depends="test">
    <property file="build.properties"/>
        <exec executable="git">
            <arg line="add ."/>
        </exec>
        <exec executable="git">
            <arg line='commit -am"${message} ${TODAY_FR}"'/>
        </exec>
    </target>
    <target name="deploy" depends="commit">
   <exec executable="git">
       <arg line="push ${branch} master"/>
   </exec>
</target>
</project>